<%= form_tag students_path do %>
  <%= label_tag(:name, "Full name") %>
  <%= text_field_tag(:name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:course, "Course name") %>
  <%= text_field_tag(:course, nil, placeholder: @placeholder_course) %>

  <%= label_tag(:grade, "Grade") %>
  <%= text_field_tag(:grade, nil, placeholder: @placeholder_grade) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>
